pkgname=breeze-icons
pkgver=5.68.80_git20200412
_commit="169b438c9fc1fc3ef918ed45efe930a47bdfa19b"
pkgrel=0
pkgdesc="Breeze icon themes"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="extra-cmake-modules qt5-qtbase-dev"
checkdepends="bash"
source="$pkgname-$_commit.tar.gz::https://github.com/KDE/breeze-icons/archive/$_commit.tar.gz
	busybox-grep-q.patch
	busybox-sed-i.patch
	0001-Revert-GIT_SILENT-Upgrade-ECM-and-KF5-version-requir.patch
	"
builddir="$srcdir/$pkgname-$_commit"

prepare() {
	default_prepare

	mkdir "$builddir"/build
}

build() {
	cd "$builddir"/build
	cmake "$builddir" \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBINARY_ICONS_RESOURCE=ON
	make
}

check() {
	cd "$builddir"/build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E '(dupe|symlink)'
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" make install
}
