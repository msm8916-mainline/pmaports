# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kwayland-server
pkgver=5.18.90
pkgrel=0
pkgdesc="Wayland Server Components built on KDE Frameworks"
arch="all !armhf" # armhf blocked by qt5-qtdeclarative
url="https://www.kde.org/workspaces/plasmadesktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND LGPL-2.1-only"
depends_dev="qt5-qtbase-dev kwayland-dev plasma-wayland-protocols"
makedepends="$depends_dev extra-cmake-modules linux-headers doxygen qt5-qttools-dev wayland-protocols"
source="https://download.kde.org/unstable/plasma/$pkgver/kwayland-server-$pkgver.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Requires running wayland compositor

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}
sha512sums="93c0aa80dd453dfbe400a016f42ff424629e95fc7392c468cad7368d04871cea9b5f96c383900b467eec68dc8729b15bb7cc14758ceafb6430a784791232e85b  kwayland-server-5.18.90.tar.xz"
