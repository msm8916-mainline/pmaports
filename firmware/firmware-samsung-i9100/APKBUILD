pkgname=firmware-samsung-i9100
pkgver=1
pkgrel=2
_commit="a5346c8874d5186c967b74291c2055d902f7a928"
pkgdesc="Samsung Galaxy S II Firmware"
url="https://github.com/TheMuppets/proprietary_vendor_samsung"
arch="armhf"
license="proprietary"
source="$pkgname-$_commit.tar.gz::https://github.com/TheMuppets/proprietary_vendor_samsung/archive/$_commit.tar.gz"
options="!check !archcheck !split !spdx"
builddir="$srcdir/proprietary_vendor_samsung-$_commit"

_files="bcmdhd_apsta.bin bcmdhd_mfg.bin bcmdhd_p2p.bin bcmdhd_sta.bin nvram_mfg.txt nvram_mfg.txt_murata nvram_net.txt nvram_net.txt_murata"

package() {
	for _i in $_files; do
		install -Dm644 i9100/proprietary/system/etc/wifi/"$_i" \
			"$pkgdir"/lib/firmware/postmarketos/"$_i"
	done
}
